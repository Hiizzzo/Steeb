# ============================================================================
# STEBE CALENDAR APP - ENVIRONMENT VARIABLES
# ============================================================================

# API Configuration
VITE_API_URL=http://localhost:3001/api

# Authentication 
VITE_AUTH_ENABLED=true
VITE_AUTH_PROVIDER=firebase

# Firebase Config
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# External Calendar Integration (Future implementation)
VITE_GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id_here
VITE_MICROSOFT_CALENDAR_CLIENT_ID=your_microsoft_client_id_here

# Analytics & Tracking
VITE_ANALYTICS_ENABLED=true
VITE_SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CALENDAR_SYNC=false
VITE_ENABLE_COLLABORATION=false
VITE_ENABLE_OFFLINE_MODE=true

# PWA Configuration
VITE_APP_NAME=Stebe Calendar
VITE_APP_SHORT_NAME=Stebe
VITE_APP_DESCRIPTION=Productivity-focused task and calendar management

# Development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info